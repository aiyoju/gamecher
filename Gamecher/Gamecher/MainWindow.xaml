                <Rectangle
                           Margin="0,0,15,15" 
                           Fill="SlateGray" 
                           RadiusY="2.5"
                           RadiusX="2.5"/>
                <Rectangle
                           Margin="0,0,15,15" 
                           Fill="SlateGray" 
                           RadiusY="2.5"
                           RadiusX="2.5"/>
                <Rectangle
                           Margin="0,0,15,15" 
                           Fill="SlateGray" 
                           RadiusY="2.5"
                           RadiusX="2.5"/>
                <Rectangle
                           Margin="0,0,15,15" 
                           Fill="SlateGray" 
                           RadiusY="2.5"
                           RadiusX="2.5"/>
                <Rectangle
                           Margin="0,0,15,15" 
                           Fill="SlateGray" 
                           RadiusY="2.5"
                           RadiusX="2.5"/>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>